@model IEnumerable<WebApplication3.Models.notes>

@{
    ViewBag.Title = "Index";
}

@if (ViewBag.name != null)
{
    <h3 class="subjectNotes">Notes for @ViewBag.name</h3>
}
<table class="table" style="color:#222222; background-color:white">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Body)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.datePosted)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.Raw(item.Body)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.datePosted)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.noteID }) |
            @Html.ActionLink("Details", "Details", new { id=item.noteID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.noteID })
        </td>
    </tr>
}

</table>
